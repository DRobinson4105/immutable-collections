<?xml version="1.0" encoding="UTF-8"?>
<project name="javadoc" default="javadoc.module.immutable-collections">
    <property name="immutable-collections.javadoc.dir"
              value="${module.immutable-collections.basedir}/../out/javadoc/immutable-collections"/>
    <property name="immutable-collections.javadoc.tmp" value="${immutable-collections.javadoc.dir}/tmp"/>
    <property name="immutable-collections.javadoc.jar"
              value="${immutable-collections.javadoc.dir}/immutable-collections-javadoc.jar"/>

    <target name="javadoc.module.immutable-collections">
        <javadoc sourcepathref="immutable-collections.module.test.sourcepath"
                 destdir="${immutable-collections.javadoc.tmp}" classpathref="immutable-collections.module.classpath"/>
        <jar destfile="${immutable-collections.javadoc.jar}" duplicate="preserve" filesetmanifest="skip">
            <zipfileset dir="${immutable-collections.javadoc.tmp}"/>
        </jar>
        <delete dir="${immutable-collections.javadoc.tmp}"/>
    </target>
</project>
