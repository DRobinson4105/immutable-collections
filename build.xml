  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_junit:junit:4.12.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  <import file="${basedir}/build/module_build.xml"/>
  
  <import file="${basedir}/immutable-collections/module_immutable-collections.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.build, clean.module.immutable-collections" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.build, compile.module.immutable-collections" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.immutable-collections-javadoc:jar" value="${basedir}/out/artifacts/immutable_collections_javadoc_jar"/>
    <property name="artifact.output.immutable-collections-sources:jar" value="${basedir}/out/artifacts/immutable_collections_sources_jar"/>
    <property name="artifact.output.immutable-collections:jar" value="${basedir}/out/artifacts/immutable_collections_jar"/>
    <property name="artifact.output.test-results:jar" value="${basedir}/out/artifacts/TEST_results_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.immutable-collections-javadoc.jar" value="${artifacts.temp.dir}/immutable-collections-javadoc.jar"/>
    <property name="temp.jar.path.immutable-collections-sources.jar" value="${artifacts.temp.dir}/immutable-collections-sources.jar"/>
    <property name="temp.jar.path.immutable-collections.jar" value="${artifacts.temp.dir}/immutable-collections.jar"/>
    <property name="temp.jar.path.TEST-results.jar" value="${artifacts.temp.dir}/TEST-results.jar"/>
  </target>
  
  <target name="artifact.immutable-collections-javadoc:jar" depends="init.artifacts" description="Build &#39;immutable-collections-javadoc:jar&#39; artifact">
    <property name="artifact.temp.output.immutable-collections-javadoc:jar" value="${artifacts.temp.dir}/immutable_collections_javadoc_jar"/>
    <mkdir dir="${artifact.temp.output.immutable-collections-javadoc:jar}"/>
    <jar destfile="${temp.jar.path.immutable-collections-javadoc.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain"/>
    <copy file="${temp.jar.path.immutable-collections-javadoc.jar}" tofile="${artifact.temp.output.immutable-collections-javadoc:jar}/immutable-collections-javadoc.jar"/>
  </target>
  
  <target name="artifact.immutable-collections-sources:jar" depends="init.artifacts" description="Build &#39;immutable-collections-sources:jar&#39; artifact">
    <property name="artifact.temp.output.immutable-collections-sources:jar" value="${artifacts.temp.dir}/immutable_collections_sources_jar"/>
    <mkdir dir="${artifact.temp.output.immutable-collections-sources:jar}"/>
    <jar destfile="${temp.jar.path.immutable-collections-sources.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="/Users/tom/projects/immutable-collections/immutable-collections/src"/>
    </jar>
    <copy file="${temp.jar.path.immutable-collections-sources.jar}" tofile="${artifact.temp.output.immutable-collections-sources:jar}/immutable-collections-sources.jar"/>
  </target>
  
  <target name="artifact.immutable-collections:jar" depends="init.artifacts, compile.module.immutable-collections" description="Build &#39;immutable-collections:jar&#39; artifact">
    <property name="artifact.temp.output.immutable-collections:jar" value="${artifacts.temp.dir}/immutable_collections_jar"/>
    <mkdir dir="${artifact.temp.output.immutable-collections:jar}"/>
    <jar destfile="${temp.jar.path.immutable-collections.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${immutable-collections.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.immutable-collections.jar}" tofile="${artifact.temp.output.immutable-collections:jar}/immutable-collections.jar"/>
  </target>
  
  <target name="artifact.test-results:jar" depends="init.artifacts" description="Build &#39;TEST-results:jar&#39; artifact">
    <property name="artifact.temp.output.test-results:jar" value="${artifacts.temp.dir}/TEST_results_jar"/>
    <mkdir dir="${artifact.temp.output.test-results:jar}"/>
    <jar destfile="${temp.jar.path.TEST-results.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/TEST-*.xml"/>
    </jar>
    <copy file="${temp.jar.path.TEST-results.jar}" tofile="${artifact.temp.output.test-results:jar}/TEST-results.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.immutable-collections-javadoc:jar, artifact.immutable-collections-sources:jar, artifact.immutable-collections:jar, artifact.test-results:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.immutable-collections-javadoc:jar}"/>
    <copy todir="${artifact.output.immutable-collections-javadoc:jar}">
      <fileset dir="${artifact.temp.output.immutable-collections-javadoc:jar}"/>
    </copy>
    <mkdir dir="${artifact.output.immutable-collections-sources:jar}"/>
    <copy todir="${artifact.output.immutable-collections-sources:jar}">
      <fileset dir="${artifact.temp.output.immutable-collections-sources:jar}"/>
    </copy>
    <mkdir dir="${artifact.output.immutable-collections:jar}"/>
    <copy todir="${artifact.output.immutable-collections:jar}">
      <fileset dir="${artifact.temp.output.immutable-collections:jar}"/>
    </copy>
    <mkdir dir="${artifact.output.test-results:jar}"/>
    <copy todir="${artifact.output.test-results:jar}">
      <fileset dir="${artifact.temp.output.test-results:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>